page, view, imgage, swiper, swiper-item,navigator {
  box-sizing: border-box;
}
page {
  background-color: rgb(248, 248, 248);
}

.btn {
  background-image: linear-gradient(to right, #ff7474, #f73131);
  color: white;
  font-size: 30rpx;
  line-height: 50rpx;
  border-radius: 12rpx;
  font-weight: normal;
}

.clearfix::before, .clearfix::after {
  display: block;
  clear: both;
  content: ""
}