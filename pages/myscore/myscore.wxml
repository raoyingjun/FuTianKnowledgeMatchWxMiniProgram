<view>
  <view class="header clearfix">
    <view class="header-item {{isActive?'active':''}}" bindtap="toggleActive">热身赛</view>
    <view class="header-item {{isActive?'':'active'}}" bindtap="toggleActive">资格赛</view>
  </view>
  <!-- 名称，得分，用时，提交的时间 -->
  <view class="main">
    <wxs src="./util.wxs" module="tool"/>
    <view class="row row-header">
      <view class="col">名称</view>
      <view class="col">得分</view>
      <view class="col">用时</view>
      <view class="col">本基层党组织分数榜</view>
      <view class="col">教育工委分数榜</view>
    </view>
    <view class="row" wx:for="{{list}}">
      <view class="col">{{item.chapterName}}</view>
      <view class="col">{{item.score}}分</view>
      <view class="col">{{tool.getTimeBySecond(item.time)}}</view>
      <view class="col">
        <navigator class="col-btn col-btn-chusai" url="../deptscore/deptscore?cid={{item.cid}}&name={{item.chapterName}}">查看</navigator>
      </view>
      <view class="col">
        <navigator class="col-btn col-btn-fusai" url="../everyonescore/everyonescore?cid={{item.cid}}&name={{item.chapterName}}">查看</navigator>
      </view>
    </view>
    <view class="loading-msg">{{loadingMsg}}</view>
  </view>
</view>